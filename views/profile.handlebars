<h1 class="page-header">Welcome back, {{email}}!</h1>

<form class="add-chirp" id="new-chirp-form">
  <h2>Add a chirp</h2>
  <br />
  <textarea id="chirp-input"></textarea>
  <button>Chirp!</button>
</form>

<div class="add-chirp">
  <h2>My chirps</h2>
  <br />
  {{#each Chirps}}
    <section class="chirp-box">
      <p>{{chirp}}</p>
      <div>
        <a name={{id}} href="/profile">Delete</a>
        <a class="modal-trigger" name={{id}} href="/chirp/update/{{id}}"">Update</a>
      </div>
    </section>
    <br />
  {{/each}}
</div>

<script type="module" src="/js/profile.js"></script>
