<h1 class="page-header">Welcome back, {{email}}!</h1>

<form class="add-chirp" id="new-chirp-form">
    <h2>Add a chirp</h2>
    <textarea id="chirp-input"></textarea>
    <button>Chirp!</button>
</form>

<div class = "add-chirp">
    <h2>My chirps</h2>
{{#each Chirps}}
    <section class="chirp-box">
    <p>  text: {{chirp}}</p>
    <a href="/profile">delete</a>
</section>
{{/each}}

</div>


<script src="/js/profile.js"></script>